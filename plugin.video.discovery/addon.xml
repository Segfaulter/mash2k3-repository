<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.discovery"
       name="Discovery Channel"
       version="1.0.0"
       provider-name="Mash2k3">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
    <summary lang="en">Browse Discovery Channel Video Content</summary>
    <description lang="en">Browse and play a wide selection of video clips from Discovery Channel website.</description>
    <platform>all</platform>
  </extension>
</addon>
